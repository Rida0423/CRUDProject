<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="titleTextField">Workout Title</label>
                    <input type="text" class="form-control" id="titleTextField" placeholder="Enter the Workout Title" name="Title" required>
                </div>
                <div class="form-group">
                    <label for="durationTextField">Workout Duration</label>
                    <input type="text" class="form-control" id="durationTextField" placeholder="Enter the Workout Duration" name="Duration" required>
                </div>
                <div class="form-group">
                    <label for="typeTextField">Type</label>
                    <input type="text" class="form-control" id="typeTextField" placeholder="Enter the type of workout" name="type" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Workout Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="enter the Workout Description" name="Description" required></textarea>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>